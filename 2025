    // 頁面載入時，預設顯示 Day 1
    document.addEventListener('DOMContentLoaded', function() {
        showSchedule('day1');
    });

    /**
     * 切換行程日期的內容顯示
     * @param {string} dayId - 欲顯示的日期 ID (e.g., 'day1')
     */
    function showSchedule(dayId) {
        // 隱藏所有行程
        document.querySelectorAll('.day-schedule').forEach(function(schedule) {
            schedule.classList.remove('active');
        });

        // 顯示被選中的行程
        var selectedSchedule = document.getElementById(dayId);
        if (selectedSchedule) {
            selectedSchedule.classList.add('active');
        }

        // 更新 Tab 樣式
        document.querySelectorAll('.date-tab').forEach(function(tab) {
            tab.classList.remove('active');
            if (tab.getAttribute('data-day') === dayId) {
                tab.classList.add('active');
            }
        });
    }

    /**
     * 開啟彈出視窗並顯示景點細節
     * @param {string} detailId - 景點的唯一 ID
     * @param {string} title - 景點的標題
     */
    function openModal(detailId, title) {
        document.getElementById('modalTitle').textContent = title;
        document.getElementById('modalDetail').textContent = attractionDetails[detailId];
        document.getElementById('detailModal').style.display = 'block';
    }

    /**
     * 關閉彈出視窗
     */
    function closeModal() {
        document.getElementById('detailModal').style.display = 'none';
    }

    // 點擊 Modal 以外的地方關閉視窗
    window.onclick = function(event) {
        var modal = document.getElementById('detailModal');
        if (event.target == modal) {
            closeModal();
        }
    }
</script>

</body>
</html>
